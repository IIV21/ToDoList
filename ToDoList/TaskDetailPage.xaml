<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ToDoList.TaskDetailPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                    Text="{Binding Name}"
                    FontAttributes="Bold"
                    FontSize="15"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>

            <Label 
                    Text="{Binding Data}"
                    FontAttributes="Bold"
                    FontSize="15"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            
            <Label 
                    Text="{Binding Days}"
                    FontAttributes="Bold"
                    FontSize="15"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            
            <Label 
                    Text="{Binding Check}"
                    FontAttributes="Bold"
                    FontSize="15"
                    VerticalOptions="Center"
                    HorizontalOptions="Center"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>